{
   "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "lib": ["ES2020"],
      "outDir": "./dist",
      "rootDir": ".",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "baseUrl": "./src",
      "paths": {
         "@/*": ["./*"],
         "@controllers/*": ["controllers/*"],
         "@services/*": ["services/*"],
         "@middlewares/*": ["middlewares/*"],
         "@routes/*": ["routes/*"],
         "@schemas/*": ["schemas/*"],
         "@utils/*": ["utils/*"],
         "@types/*": ["types/*"],
         "@generated/*": ["generated/*"]
      }
   },
   "include": ["src/**/*", "generated/**/*"],
   "exclude": ["node_modules", "dist"]
}
